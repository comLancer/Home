<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <FrameLayout
        android:id="@+id/fl_mycontainer"
        android:layout_width="411dp"
        android:layout_height="646dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--      <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/colorPrimary"
            app:itemIconTint="#D84141"
            app:itemTextColor="#8B60D8"
            app:menu="@menu/bottom_navigation_menu" />-->
    </FrameLayout>

    <Button
        android:id="@+id/bt_profile"
        android:layout_width="91dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:text="Profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bt_search"
        android:layout_width="94dp"
        android:layout_height="69dp"
        android:layout_marginEnd="8dp"
        android:text="Search"
        app:layout_constraintBottom_toBottomOf="@+id/bt_profile"
        app:layout_constraintEnd_toStartOf="@+id/btn_home"
        app:layout_constraintTop_toTopOf="@+id/bt_profile" />

    <Button

        android:id="@+id/btn_home"
        android:layout_width="98dp"
        android:layout_height="66dp"
        android:layout_marginEnd="12dp"
        android:text="Home"
        app:layout_constraintBottom_toBottomOf="@+id/bt_search"
        app:layout_constraintEnd_toStartOf="@+id/btn_chat"
        app:layout_constraintTop_toTopOf="@+id/bt_search" />

    <Button
        android:id="@+id/btn_chat"
        android:layout_width="89dp"
        android:layout_height="68dp"
        android:layout_marginEnd="16dp"
        android:text="Chat"
        app:layout_constraintBottom_toBottomOf="@+id/btn_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_home" />
</androidx.constraintlayout.widget.ConstraintLayout>